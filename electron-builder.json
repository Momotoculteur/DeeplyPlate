{
    "appId": "DeeplyPlate",
    "compression": "maximum",
    "asar": true,
    "win": {
        "target": "nsis",
        "icon": "./src/assets/icon/icon_transparent.png"
    },
    "electronDownload": {
        "cache": "./cache"
    },
    "directories": {
        "output": "./distElectron"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true
    },
    "files": [
        "main.js",
        "package.json",
        "./dist/**/*",
        "backend/**/*.js"
    ]
    
}